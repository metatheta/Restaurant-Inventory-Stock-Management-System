<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="900.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.TransactionSelectController">
    <children>
        <VBox alignment="BASELINE_CENTER" layoutX="2.0" layoutY="14.0" prefHeight="881.0" prefWidth="1300.0" spacing="60.0">
            <children>
                <Label alignment="CENTER" prefHeight="122.0" prefWidth="1069.0" text="Perform Transactions">
                    <font>
                        <Font size="48.0" />
                    </font></Label>
                <Button alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#purchaseNewStock" prefHeight="60.0" prefWidth="434.0" text="Restock Items">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Button>
                <Button alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#restockItems" prefHeight="60.0" prefWidth="434.0" text="Purchase New Item">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Button>
                <Button alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#disposeUnusedStock" prefHeight="60.0" prefWidth="434.0" text="Dispose of Expired Stock">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Button>
                <Button alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#createDish" prefHeight="60.0" prefWidth="434.0" text="Create Dish">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Button>
            <Button alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#returnToMainMenu" prefHeight="60.0" prefWidth="434.0" text="Return to Main Menu">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
