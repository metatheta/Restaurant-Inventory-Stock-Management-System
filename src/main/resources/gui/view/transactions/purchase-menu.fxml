<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.SearchableComboBox?>

<AnchorPane prefHeight="900.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.transactions.purchase.PurchaseMenuController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="900.0" prefWidth="1300.0" spacing="40.0">
            <children>

                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="150.0" prefWidth="500.0" text="Purchase Items" textAlignment="CENTER">
                    <font>
                        <Font name="Inter_FXH Regular" size="48.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Label>

                <VBox alignment="CENTER" spacing="30.0">
                    <children>

                        <HBox alignment="CENTER" spacing="30.0">
                            <children>
                                <Label alignment="CENTER_RIGHT" prefWidth="400.0" text="Select Item:" textAlignment="RIGHT">
                                    <font>
                                        <Font name="Inter_FXH Regular" size="36.0" />
                                    </font>
                                </Label>
                                <SearchableComboBox fx:id="itemSelector" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="450.0" promptText="Search Item..." />
                                <Label prefWidth="150.0" />
                            </children>
                        </HBox>

                        <HBox alignment="CENTER" spacing="30.0">
                            <children>
                                <Label alignment="CENTER_RIGHT" prefWidth="400.0" text="Target Location:" textAlignment="RIGHT">
                                    <font>
                                        <Font name="Inter_FXH Regular" size="36.0" />
                                    </font>
                                </Label>
                                <SearchableComboBox fx:id="locationSelector" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="450.0" promptText="Select Storage..." />
                                <Button mnemonicParsing="false" onAction="#onAddLocation" prefHeight="50.0" prefWidth="150.0" text="New Location">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onConfirmSelection" prefHeight="70.0" prefWidth="400.0" text="Confirm Selection">
                            <font>
                                <Font name="System Bold" size="32.0" />
                            </font>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>

                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="1300.0">
                    <children>
                        <HBox alignment="CENTER" prefWidth="1300.0" spacing="150.0">
                            <children>
                                <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onViewRecords" prefHeight="65.0" prefWidth="350.0" text="View Records">
                                    <font>
                                        <Font size="28.0" />
                                    </font>
                                </Button>
                                <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#returnToMainMenu" prefHeight="65.0" prefWidth="350.0" text="Return to Main Menu">
                                    <font>
                                        <Font size="28.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets top="50.0" />
                    </VBox.margin>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
