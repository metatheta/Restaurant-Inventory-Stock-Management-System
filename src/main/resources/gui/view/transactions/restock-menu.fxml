<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="900.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.transactions.restock.RestockMenuController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="29.0" prefHeight="812.0" prefWidth="1200.0" spacing="10.0" stylesheets="/gui/view/tables/table-style.css">
            <children>

                <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="1200.0" spacing="20.0">
                    <children>
                        <Label text="Select Items to Restock">
                            <font>
                                <Font name="System Bold" size="32.0" />
                            </font>
                        </Label>

                        <HBox HBox.hgrow="ALWAYS" />

                        <ComboBox fx:id="filterColumnComboBox" prefHeight="40.0" prefWidth="180.0" promptText="Filter Column" />
                        <TextField fx:id="filterField" prefHeight="40.0" prefWidth="250.0" promptText="Search..." />

                        <HBox HBox.hgrow="ALWAYS" />

                        <Button mnemonicParsing="false" onAction="#onConfirmSelection" prefHeight="45.0" prefWidth="200.0" text="Confirm Selection">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Button>
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </HBox>

                <TableView fx:id="table" editable="true" prefHeight="674.0" prefWidth="1200.0" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            <HBox alignment="CENTER" spacing="350.0">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
               <children>
            
                    <Button mnemonicParsing="false" onAction="#viewRecords" text="View Records">
                        <font>
                            <Font name="System Bold" size="28.0" />
                        </font>
                    </Button>
                  <Button mnemonicParsing="false" onAction="#returnToMainMenu" text="Return to Main Menu">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Button>
               </children>
            </HBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
