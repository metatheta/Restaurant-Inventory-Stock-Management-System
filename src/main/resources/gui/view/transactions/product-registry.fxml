<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.SearchableComboBox?>

<AnchorPane prefHeight="900.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.transactions.products.ProductRegistryMenuController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="900.0" prefWidth="1300.0" spacing="30.0">
            <children>

                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="100.0" prefWidth="500.0" text="Product Registry" textAlignment="CENTER">
                    <font>
                        <Font name="Inter_FXH Regular" size="48.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Label>

                <VBox alignment="CENTER" spacing="20.0">
                    <children>
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <Label alignment="CENTER_RIGHT" prefWidth="300.0" text="Select Supplier:">
                                    <font>
                                        <Font name="Inter_FXH Regular" size="32.0" />
                                    </font>
                                </Label>
                                <SearchableComboBox fx:id="supplierSelector" prefHeight="45.0" prefWidth="400.0" promptText="Search Supplier..." />
                                <Button mnemonicParsing="false" onAction="#onAddSupplier" prefHeight="45.0" prefWidth="150.0" text="New Supplier">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <Label alignment="CENTER_RIGHT" prefWidth="300.0" text="Select Item:">
                                    <font>
                                        <Font name="Inter_FXH Regular" size="32.0" />
                                    </font>
                                </Label>
                                <SearchableComboBox fx:id="itemSelector" prefHeight="45.0" prefWidth="400.0" promptText="Search Item..." />
                                <Button mnemonicParsing="false" onAction="#onAddNewItem" prefHeight="45.0" prefWidth="150.0" text="New Item">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <Label alignment="CENTER_RIGHT" prefWidth="300.0" text="Unit Cost:">
                                    <font>
                                        <Font name="Inter_FXH Regular" size="32.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="unitCostField" prefHeight="45.0" prefWidth="400.0" promptText="0.00" />
                                <Label prefWidth="150.0" />
                            </children>
                        </HBox>

                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <Label prefWidth="150.0" />
                            </children>
                        </HBox>

                    </children>
                </VBox>

                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button alignment="TOP_CENTER" mnemonicParsing="false" onAction="#onConfirmSelection" prefHeight="65.0" prefWidth="400.0" text="Register / Update">
                            <font>
                                <Font name="System Bold" size="32.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>

                <VBox alignment="CENTER" prefHeight="150.0" prefWidth="1300.0">
                    <children>
                        <HBox alignment="CENTER" prefWidth="1300.0" spacing="150.0">
                            <children>
                                <Button alignment="CENTER" mnemonicParsing="false" onAction="#onViewRecords" prefHeight="65.0" prefWidth="350.0" text="View History">
                                    <font>
                                        <Font size="28.0" />
                                    </font>
                                </Button>
                                <Button alignment="CENTER" mnemonicParsing="false" onAction="#returnToMainMenu" prefHeight="65.0" prefWidth="350.0" text="Return to Main Menu">
                                    <font>
                                        <Font size="28.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
