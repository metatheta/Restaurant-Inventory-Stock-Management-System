<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="900.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.transactions.disposal.DisposalMenuController">
    <children>
        <VBox alignment="BASELINE_CENTER" layoutX="2.0" layoutY="14.0" prefHeight="881.0" prefWidth="1300.0" spacing="60.0">
            <children>
                <Label alignment="CENTER" prefHeight="144.0" prefWidth="1069.0" text="Dispose of Expired Items">
                    <font>
                        <Font name="Inter_FXH Regular" size="48.0" />
                    </font></Label>
                <Button alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#disposeItems" prefHeight="60.0" prefWidth="434.0" text="Trigger Disposal">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Button>
                <Button alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#viewRecentDisposal" prefHeight="60.0" prefWidth="434.0" text="View Recently Disposed">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Button>
                <Button alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                        onAction="#viewAllDisposals" prefHeight="60.0" prefWidth="434.0" text="View Disposal Records">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Button>
                <Button alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                        onAction="#returnToMainMenu" prefHeight="60.0" prefWidth="434.0" text="Return to Main Menu">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
