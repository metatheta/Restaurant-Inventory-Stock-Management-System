<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="900.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.reports.YearMonthReportController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="900.0" prefWidth="1300.0" spacing="50.0">
            <children>

                <Label alignment="CENTER" text="Seasonal Stock Report">
                    <font>
                        <Font name="Inter_FXH Regular" size="48.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="50.0" />
                    </VBox.margin>
                </Label>

                <VBox alignment="CENTER" spacing="30.0">
                    <children>

                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <Label alignment="CENTER_RIGHT" prefWidth="150.0" text="Year:">
                                    <font>
                                        <Font name="Inter_FXH Regular" size="28.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="yearComboBox" prefHeight="50.0" prefWidth="300.0" promptText="Select Year" />
                            </children>
                        </HBox>

                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <Label alignment="CENTER_RIGHT" prefWidth="150.0" text="Month:">
                                    <font>
                                        <Font name="Inter_FXH Regular" size="28.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="monthComboBox" prefHeight="50.0" prefWidth="300.0" promptText="Select Month" />
                            </children>
                        </HBox>

                    </children>
                    <VBox.margin>
                        <Insets left="300.0" right="300.0" />
                    </VBox.margin>
                </VBox>

                <HBox alignment="CENTER" spacing="50.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onViewReport" prefHeight="60.0" prefWidth="250.0" text="View Report">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>

                <VBox alignment="CENTER">
                    <children>
                        <Button mnemonicParsing="false" onAction="#returnToMainMenu" prefHeight="50.0" prefWidth="200.0" text="Main Menu">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets top="50.0" />
                    </VBox.margin>
                </VBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
